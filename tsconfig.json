{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"moduleResolution": "NodeNext",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ESNext"],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}
